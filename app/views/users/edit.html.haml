.container.user-new
  = form_for(@user) do |f|
    .col-md-8.col-md-offset-2
      %header.row.user-nav.row
        .col-md-12
          %h2 Edit Profile
          .user-name_image.row
            .user-name.col-md-10
              = f.text_field :name, autofocus: true, placeholder: "Username", value: "#{@user.name}"
            .user-image.col-md-2
              %button.btn.btn-primary Change image
              %input{type: "file"}/
          = f.email_field :email, autofocus: true, class:'user-email', placeholder: "E-Mail", value: "#{@user.email}"
          - if @minimum_password_length
            %em
              (#{@minimum_password_length} characters minimum)
          = f.password_field :password, autocomplete: "off", class:'user-password', placeholder: "Password"

        .col-md-12
          %h4 Member of
          .user-user-member.row
            .user-name.col-md-12
              = f.text_field :member, autofocus: true, placeholder: "Member", id: "user_group", value: "#{@user.member}"
          %h4 Profile
          .user-user-profile.row
            .user-name.col-md-12
              = f.text_area :profile, cols: "30", rows: "4", placeholder: "Profile", id: "user_profile" do
                = @user.profile
          %h4 Works
          .user-name_image.row
            .user-name.col-md-12
              = f.text_area :works, cols: "30", rows: "4", placeholder: "Works", id: "user_work" do
                = @user.works
      .row.text-center.user-btn
        = f.submit "Save", class: 'btn btn-lg btn-primary btn-block'
