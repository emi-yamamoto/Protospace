.col-sm-4.col-md-3.proto-content
  .thumbnail
    = link_to image_tag(prototype.images.main[0].name), '/prototypes/show'
    .caption
      %h3= prototype.title
      .proto-meta
        .proto-user
          = link_to "by #{prototype.user.name}", user_path(prototype.user.name), method: :get
        .proto-posted
          = l prototype.created_at, format: :default
      %ul.proto-tag-list.list-inline
        %li
          = link_to 'iPad', '#', class: "btn btn-default"
        %li
          = link_to 'wireframe', '#', class: "btn btn-default"
